<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="tuser"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>user_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>user_</Column>
    </UpdateKeys>
    <Queries>
        
        	<Query id="default">        
            <ValidColumns>
                <Column>USER_</Column>
                <Column>EMAIL</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME</Column>
                <Column>user_</Column>
                <Column>email</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>htl_restriction</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.TUSER
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>
                <Column>USER_</Column>
                <Column>EMAIL</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME</Column>                
                <Column>user_</Column>
                <Column>email</Column>
                <Column>password</Column>
                <Column>name</Column>
                <Column>surname</Column>
                <Column>htl_restriction</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.TUSER
                    WHERE userblocked is null
                    #WHERE_CONCAT#
                ]]>
            </Sentence>
        </Query>
        
    </Queries>
</JdbcEntitySetup>